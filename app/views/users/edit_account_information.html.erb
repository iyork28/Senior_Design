<h1><%= @user.full_name%> | Edit Account Information</h1>

<form method="POST" action="<%= url_for :controller => :users, :action => :edit_account_information %>">

    <div class="form-group">
        <label for="first_name">First Name:</label><br />
        <input type="text" class="form-control" name="first_name" value="<%= @user.first_name %>">
    </div>
    <div class="form-group">
        <label for="last_name">Last name:</label><br />
        <input type="text" class="form-control" name="last_name" value="<%= @user.last_name %>">
    </div>
    <div class="form-group">
        <label for="email_address">Email Address:</label><br />
        <input type="date" class="form-control" name="email_address" value="<%= @user.email %>">
    </div>
    <div class="form-group">
        <input type="submit" id="submit_button" class="btn btn-primary" value="Submit">
        <input type="reset" class="btn btn-primary" value="Reset">
        <input type="submit" id="cancel_button" class="btn btn-primary" value="Cancel">
        <input type="hidden" id="validate_submit" name="validate_submit" value="false">

    </div>
    <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
</form>

<% content_for :inline_js do %>
<script>
$('#submit_button').click(function() {
    $("#validate_submit").val("true");
});
</script>
<% end %>