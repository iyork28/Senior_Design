<h1 class="text-center">Edit <%= @group.name %></h1>
<form method="POST" action="<%= url_for controller: 'groups', action: 'edit' %>">
	<div class="container" style="margin-top:20px;">
		<div class="row">
			<div class="col-xs-6">
				<h3 class="text-center">Edit Group Memberships</h3>
				<div class="well" style="max-height: 300px;overflow: auto;">         		
					<% @users.each do |u| %>
						<label class="checkbox"><%= check_box_tag("group_members[]", u.id, @group.users.include?(User.find(u.id)) ) %><%= u.full_name %></label>
					<% end %>
				</div>
			</div>
		</div>
		<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
		<div class="form-group">
			<input type="submit" value="Submit" class="btn btn-primary" />
		</div>
	</div>
</form>