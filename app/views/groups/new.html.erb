<h1 class="text-center">Create Group for <%= @org.name %></h1>
<!-- <form method="POST" action="groups#create"> -->
<%= form_tag(new_group_path, method: "post") do %>
    <div class="container" style="margin-top:20px;">
    	<div class="row">
            <div class="col-xs-6">
                <h3 class="text-center">Select Group Members</h3>
                <div class="well" style="max-height: 300px;overflow: auto;">
									<label class="textfield">Group Name
										<%= text_field_tag('name',nil, maxlength: 20, size: 25) %>
									</label>
            	    <% @users.each do |u| %>
	                  <label class="checkbox">
											<%= check_box_tag("added_users[]", u.id) %><%= u.full_name %>
										</label>
	                <% end %>		
                </div>
            </div>
        </div>
    </div>
    <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
<!-- </form> -->
		<% end %>