<h1 class="text-center">Add Admins for <%= @organization.name %></h1>
<form method="POST" action="<%= url_for :controller => 'organizations', :action => 'add_admins' %>">
    <div class="container" style="margin-top:20px;">
    	<div class="row">
            <div class="col-xs-6">
                <h3 class="text-center">Select new admins</h3>
                <div class="well" style="max-height: 300px;overflow: auto;">
            		
            	      <% @users.each do |u| %>
                      <%= check_box_tag(u.id) %>
                      <%= label_tag(u.full_name) %> <br/>
                      <% end %>
                
                </div>
            </div>
            <div class="col-xs-6"/>
        </div>
    </div>
    <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>