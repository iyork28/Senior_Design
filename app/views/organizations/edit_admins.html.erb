<h1 class="text-center">Edit Admins for <%= @organization.name %></h1>
<form method="POST" action="<%= url_for :controller => 'organizations', :action => 'edit_admins' %>">
    <div class="container" style="margin-top:20px;">
    	<div class="row">
            <div class="col-xs-6">
	            <h3 class="text-center">Select new Admins</h3>
                <div class="well" style="max-height: 300px;overflow: auto;">         		
	    	    	<% @users.each do |u| %>
                		<label class="checkbox"><%= check_box_tag("newadmins[]", u.id) %><%= u.full_name %></label>
            		<% end %>
                </div>
            </div>
            <div class="col-xs-6">
                <h3 class="text-center">Select Admins to remove</h3>
                <div class="well" style="max-height: 300px;overflow: auto;">                   
                    <% @currentadmins.each do |a| %>
                        <label class="checkbox"><%= check_box_tag("adminstoremove[]", a.id) %><%=a.full_name%></label>
                    <% end %> 
                </div>
            </div>
        </div>
    </div>
    <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>